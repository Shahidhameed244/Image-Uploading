    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                font-family: 'Segoe UI';
                margin: 0;
                background: #f3f3f3;
            }

            .main {
                display: block;
                text-align: center;
                padding: 10px 20px;
                width: 500px;
                border-radius: 15px;
                background: white;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            }

            h1 {
                color: #4CAF50;
            }

            label {
                display: block;
                width: 100%;
                text-align: left;
                margin-top: 10px;
                margin-bottom: 15px;
                color: #555;
            }

            input {
                display: block;
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                box-sizing: border-box;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            button {
                cursor: pointer;
                background-color: #4CAF50;
                color: white;
                padding: 12px;
                margin-top: 10px;
                margin-bottom: 15px;
                width: 100%;
                border-radius: 10px;
                border: none;
                font-size: 17px;
            }
                button:hover {
                    cursor: pointer;
                    background-color: forestgreen;
                    transition:0.5s ease-in;
                   
                }

            .message {
                color: red;
                display: none;
                transition: 0.5s ease-in-out;
                text-decoration: blink;
            }

            .succ-message {
                color: green;
                transition: 0.5s ease-in-out;
                text-decoration:blink;

            }

            .wrap {
                text-align: right;
            }
            .bg-img {
                height: 200px;
                width: 200px;
            }
           
            .lists {
                text-decoration: underline;
                color: green;
                cursor:pointer;
            }
                .lists:hover {
                    transition: 0.7s ease-in-out;
                    font-size:14px;
                    text-decoration: none;
                    color: green;

                    cursor: pointer;
                }
        </style>
    </head>
    <body>

        <div class="main">
            <h1>
                SESSION NO.2
            </h1>
            <h3>
                Image Uploading
            </h3>
            <form action="ImageDownload" id="ImageDownload" method="post" enctype="multipart/form-data">
                <label for="fileInput">Upload an image:</label>
                <input name="files" type="file" id="fileInput" @*accept="image/jpeg, image/png, image/gif"*@ />
                <p id="message" style="color: red;"></p>
                <p id="message"></p>
                <h4 class="succ-message">
                    @ViewBag.UploadStatus
                </h4>
                @if (IsPost)
                {

                    <img src="@Model.pathp" class="bg-img"/>


                }
                <p id="successMessage" style="color: green;"></p>
                <div class="wrap">
                    <button value="submit" class="btnsubmit" id="btnsubmit" type="submit" disabled>
                        Submit
                    </button>
                </div>
                <div class="wrap">
                    <a href="~/Image/DisplayImages" id="blinkingLink" class="lists">
                        Want to View Images List
                    </a>
                </div>
            </form>
        </div>

        <script>
            document.getElementById('fileInput').addEventListener('change', function () {
                const file = this.files[0];
                const message = document.getElementById('message');
                const submitButton = document.getElementById('btnsubmit');
                const validImageTypes = ['image/jpeg', 'image/png', 'image/gif'];

                if (file) {
                    const fileType = file.type;

                    if (validImageTypes.includes(fileType)) {
                        message.textContent = '';
                        submitButton.disabled = false; // Enable the submit button
                    } else {
                        message.textContent = 'Please upload a valid image file (JPEG, PNG, GIF).';
                        this.value = ''; // Clear the input value
                        submitButton.disabled = true; // Disable the submit button
                    }
                } else {
                    submitButton.disabled = true; // Disable the submit button if no file is selected
                }
            });

